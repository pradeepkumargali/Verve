@import 'libs/nib/index'
@import 'libs/nib/text/index'
@import 'libs/nib/mobile'

reset-html5()

html
  mobile-html()

body
  font 14px "Helvetica Neue", Helvetica, Arial, sans-serif
  padding 0px
  margin 0 auto
  width 100%
  color #666
  overflow-x hidden
  background: linear-gradient(top, #fff, #ddd)

ul, div
  margin 0
  padding 0

ul
  list-style none

.scrollable
  overflow-x hidden
  overflow-y scroll
  -webkit-overflow-scrolling touch

#app
  overflow hidden

header
  color #fff
  height 44px
  text-align center
  text-shadow 0px 1px 1px #000
  background: linear-gradient(top, #333, #444)
  padding-top 15px
  box-sizing(border-box)

#content
  position absolute
  top 44px
  bottom 0
  left 0
  right 0
  padding 10px